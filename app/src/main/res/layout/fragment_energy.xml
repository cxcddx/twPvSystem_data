<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="节能减排"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/iv_co2"
                    style="@style/EnergyIv"
                    android:src="@drawable/carbon_dioxide_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_co2"
                style="@style/EnergyTitleText"
                android:text="CO2减排量" />

            <TextView
                android:id="@+id/content_co2"
                style="@style/EnergyContentText"
                android:text="2.964 万t" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/iv_coal"
                    style="@style/EnergyIv"
                    android:src="@drawable/coal_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_coal"
                style="@style/EnergyTitleText"
                android:text="节约标准煤" />

            <TextView
                android:id="@+id/content_coal"
                style="@style/EnergyContentText"
                android:text="1.189 万t" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/iv_forest"
                    style="@style/EnergyIv"
                    android:src="@drawable/forest_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_forest"
                style="@style/EnergyTitleText"
                android:text="减少森林砍伐" />

            <TextView
                android:id="@+id/content_forest"
                style="@style/EnergyContentText"
                android:text="1.115 万m³" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
